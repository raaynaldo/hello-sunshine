<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_for :login do |f|%>
    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <div>
        <%= link_to "Create a new company", new_company_admin_path %>
    </div>
    <div>
        <%= f.submit "Log In" %>
    </div>
<% end %>