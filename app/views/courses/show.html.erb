<div class="row">
    <h2><%= @course.title %></h2>
</div>

<div class="row">
    <img src="<%= @course.picture %>" class="img-rounded img-responsive" alt="<%=@course.title %> Course ">
</div>
<div class="row">
    <div class="col">
        <%= @course.date_to_s %>
    </div>
</div>
<div class="row">
    <div class="col">
        <%= @course.course_type %>
    </div>
</div>
<div class="row">
    <div class="col">
        Age : <%= @course.min_age.to_s + " - " + @course.max_age.to_s %>
    </div>
</div>
<div class="row">
    <div class="col">
        Max : <%= @course.max_student %> Students
    </div>
</div>
<div class="row">
    <div class="col">
        $ <%= @course.price %>
    </div>
</div>
<div class="row">
    <div class="col">
        Teacher: <%= link_to @course.teacher.name, teacher_path(@course.teacher_id) %>
    </div>
</div>
<div class="row">
    <div class="col">
        location : <%= @course.location%>
    </div>
</div>
<% if current_user %>
    <div class="row">
        <div class="col">
            <% if @course.students.exists?(current_user.id.to_i) %>
                <%= button_to "Registered", course_register_path(@course.id), class: "btn btn-secondary", disabled: true%>
                <%= button_to "Unregister", course_unregister_path(@course.id), method: "delete", class: "btn btn-danger"%>
            <% else %>
                <%= button_to "Register!", course_register_path(@course.id), class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
<% end %>
