<h1>Edit Course</h1>
<%= render partial: "shared/error_messages", locals: {object: @course} %>

<%= form_with model: @course, local: true do |f| %>
   <div class= "col-6">
        <div class="form-group">
            <%=f.label :title %>
            <%=f.text_field :title, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%=f.label :course_type %>
            <%=f.select :course_type, ['Music', 'Dance'], class: "form-control" %>
        </div>
        <div class="form-group">
            <%=f.label :date%>
            <%=f.datetime_field :date, class: "form-control" %>
        </div>
        <div class="form-group">
            <%=f.label :price%>
            <%=f.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
            <%=f.label :min_age%>
            <%=f.number_field :min_age, class: "form-control" %>
        </div>
        <div class="form-group">
           <%=f.label :max_age%>
           <%=f.number_field :max_age, class: "form-control" %>
        </div>
         <div class="form-group">
           <%=f.label :max_student%>
           <%=f.number_field :max_student, class: "form-control" %>
         </div>
         <div class="form-group">
            <%=f.label :location%>
            <%=f.select :location, ['Zoom Room', 'Rrivate Zoom Room', 'Live In-Person'], class: "form-control" %>
        </div>
        <div class="form-group">
            <%=f.label :picture%>
            <%=f.file_field :picture, class: "form-control" %> 
        </div>
         <div class="form-group">
            <%=f.label 'Teacher'%>
            <%=f.collection_select :teacher_id, Teacher.find_by_company(current_user.id), :id, :name, class: "form-control" %> 
        </div>
    <%=f.submit 'Update Course',  class: "btn btn-primary" %>
    </div>
<% end %>