<h1>Edit Company</h1>
<%= render partial: "shared/error_messages", locals: {object: @company} %>

<%= form_with model: @company, url: edit_company_path, class: "row", local: true do |f|%>
    <div class= "col-6">
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", rows: "4" %>
        </div>
        <!--
        <div class="form-group">
            <%=f.label :picture%>
            <%=f.file_field :picture, class: "form-control" %> 
        </div>
        -->
         <%= f.submit "Update Profile", class: "btn btn-primary" %>
    </div>
<% end %></h1>