<h1>
    <% if @teacher.id == 0 %>
        Create Teacher
    <% else %>
        Update Teacher
    <% end %>
</h1>

<%= render partial: "shared/error_messages", locals: {object: @teacher} %>

<%= form_with model: @teacher, class: "row", local: true do |f|%>
    <div class= "col-6">
        <%= f.hidden_field :company_id, value: current_user.company_id %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :specialty %>
            <%= f.text_field :specialty, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :hobbies %>
            <%= f.text_field :hobbies, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :website_link %>
            <%= f.url_field :website_link, class: "form-control", placeholder: "https://example.com" %>
        </div>
        <!--
        <div class="form-group">
            <%=f.label :picture%>
            <%=f.file_field :picture, class: "form-control" %> 
        </div>
        -->
        <% if @teacher.id == 0 %>
            <%= f.submit "Create User", class: "btn btn-primary" %>
        <% else %>
            <%= f.submit "Update User", class: "btn btn-primary" %>
        <% end %>
    </div>
<% end %>