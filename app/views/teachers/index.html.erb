<h1>Hello Teachers!</h1>

<div class="grid">
    <% @teachers.each do |teacher|%>
    <div class="card">
        <% if !!teacher.picture_link %>
            <img src="<%= teacher.picture_link%>" class="card-img-top img-responsive teachers_image "alt="<%=teacher.name %>">
        <% else %>
            <% if teacher.picture.attached? %>
                <img src="<%= url_for(teacher.picture)%>" class="card-img-top img-responsive teachers_image "alt="<%=teacher.name %>">
            <% end %>
        <% end %>
        <div class="card-body">
        <%= link_to teacher.name,  teacher_path(teacher.id), class: 'burntorange'%>
        </div>
    </div>
    <% end %>
</div>